<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="ldap_profile">
		<fieldset name="personal"
			label="PLG_LDAP_PROFILE_FIELDSET_PERSONAL_LABEL"
		>
			<field
				name="telephoneNumber"
				type="text"
				description="PLG_LDAP_PROFILE_FIELD_TELEPHONE_DESC"
				label="PLG_LDAP_PROFILE_FIELD_TELEPHONE_LABEL"
				size="30"
				filter="tel"
				required="false"
				disabled="false"
			/>
			<field
				name="mobile"
				type="text"
				description="Mobile number"
				label="Mobile number"
				size="30"
				filter="phone"
				required="false"
				disabled="false"
			/>
		</fieldset>
		<fieldset name="ppcr_department"
			label="PPCR Department"
		>
			<field
				name="department"
				type="text"
				description="Εισάγετε τη διεύθυνση/τμήμα που ανήκετε"
				label="Διεύθυνση/Τμήμα"
				size="30"
				filter="dept"
				required="false"
				disabled="false"
			/>
			<field
				name="description"
				type="textarea"
				description="PLG_LDAP_PROFILE_FIELD_ABOUT_ME_DESC"
				label="PLG_LDAP_PROFILE_FIELD_ABOUT_ME_LABEL"
				cols="30"
				rows="5"
				filter="safehtml"
				required="false"
				disabled="false"
			/>
		</fieldset>	
		<fieldset name="website"
			label="PLG_LDAP_PROFILE_FIELDSET_WEBSITE_LABEL"
		>
			<field
				name="wWWHomePage"
				type="text"
				description="PLG_LDAP_PROFILE_FIELD_HOMEPAGE_DESC"
				label="PLG_LDAP_PROFILE_FIELD_HOMEPAGE_LABEL"
				size="30"
				filter="string"
				required="false"
				sync="true"
				disabled="false"
			/>
			<field
				name="url"
				type="textarea"
				description="PLG_LDAP_PROFILE_FIELD_LINKS_DESC"
				label="PLG_LDAP_PROFILE_FIELD_LINKS_LABEL"
				cols="30"
				filter="string"
				required="false"
				sync="true"
				disabled="false"
				delimiter="NEWLINE"
			/>
		</fieldset>
	</fields>
</form>